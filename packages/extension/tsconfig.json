{
  "extends": "plasmo/templates/tsconfig.base",
  "include": [
    ".plasmo/index.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
  ],
  "exclude": ["node_modules/**", "build/**"],
  "compilerOptions": {
    "paths": {
      "~*": ["./src/*"],
    },
    "strictNullChecks": true,
    "baseUrl": ".",
  },
}

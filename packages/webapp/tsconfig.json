{
  "compilerOptions": {
    "module": "ESNext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": ["svelte"],
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.svelte",
    "src/vite-env.d.ts",
  ],
  "exclude": ["node_modules/**", "dist"],
}
